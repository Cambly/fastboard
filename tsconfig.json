{
  "include": ["src", "playground", "./package.json", "e2e"],
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "preserveValueImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
