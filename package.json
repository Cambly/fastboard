{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm -F={packages}... check",
    "dev": "pnpm -F=fastboard dev",
    "dev:react": "pnpm -F=fastboard-react dev",
    "dev:ui": "pnpm -F=fastboard-ui dev",
    "build": "pnpm -F={packages}... build",
    "build:ci": "pnpm --aggregate-output --filter={packages}... build",
    "cleanup": "pnpm -r cleanup",
    "release": "esbuild-dev scripts/release.ts"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.7.5",
    "@hyrious/esbuild-plugin-svelte": "^0.1.6",
    "@hyrious/rimraf": "^0.1.0",
    "@netless/window-manager": "^0.4.24",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.42",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitejs/plugin-react": "^1.3.2",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "eslint-define-config": "^1.4.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "semver": "^7.3.7",
    "sveld": "^0.15.1",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.0",
    "tsup": "^5.12.7",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "white-web-sdk": "^2.16.20"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
