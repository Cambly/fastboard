{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm -r check",
    "dev": "pnpm -F=fastboard dev",
    "dev:react": "pnpm -F=fastboard-react dev",
    "dev:ui": "pnpm -F=fastboard-ui dev",
    "build": "pnpm -r build",
    "build:ci": "pnpm --aggregate-output -r build",
    "cleanup": "pnpm -r cleanup",
    "release": "esbuild-dev scripts/release.ts"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.7.6",
    "@hyrious/esbuild-plugin-svelte": "^0.1.6",
    "@hyrious/rimraf": "^0.1.0",
    "@netless/window-manager": "^0.4.26",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.44",
    "@types/node": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react": "^1.3.2",
    "esbuild": "^0.14.42",
    "eslint": "^8.16.0",
    "eslint-define-config": "^1.5.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.6.2",
    "sass": "^1.52.1",
    "semver": "^7.3.7",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "tsup": "^6.0.1",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "white-web-sdk": "^2.16.24"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
