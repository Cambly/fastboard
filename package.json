{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm -r check",
    "dev": "pnpm -F=fastboard dev",
    "dev:react": "pnpm -F=fastboard-react dev",
    "dev:ui": "pnpm -F=fastboard-ui dev",
    "build": "pnpm -r build",
    "build:ci": "pnpm --aggregate-output -r build",
    "cleanup": "pnpm -r cleanup",
    "release": "esbuild-dev scripts/release.ts"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.8.7",
    "@hyrious/esbuild-plugin-svelte": "^0.1.7",
    "@hyrious/rimraf": "^0.1.0",
    "@netless/window-manager": "^0.4.54",
    "@sveltejs/vite-plugin-svelte": "1.4.0",
    "@types/node": "^18.7.11",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@vitejs/plugin-react": "^2.0.1",
    "esbuild": "^0.15.18",
    "eslint": "^8.22.0",
    "eslint-define-config": "^1.6.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.2.11",
    "prettier": "^2.8.0",
    "sass": "^1.54.5",
    "semver": "^7.3.7",
    "svelte": "^3.54.0",
    "svelte-check": "^2.10.1",
    "tsup": "^6.5.0",
    "type-fest": "^2.19.0",
    "typedoc": "^0.23.10",
    "typedoc-plugin-markdown": "^3.13.4",
    "typescript": "^4.9.3",
    "vite": "^3.2.5",
    "white-web-sdk": "^2.16.38"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
