{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm -r check",
    "dev": "pnpm -F=fastboard dev",
    "dev:react": "pnpm -F=fastboard-react dev",
    "dev:ui": "pnpm -F=fastboard-ui dev",
    "build": "pnpm -r build",
    "build:ci": "pnpm --aggregate-output -r build",
    "cleanup": "pnpm -r cleanup",
    "release": "esbuild-dev scripts/release.ts"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.7.6",
    "@hyrious/esbuild-plugin-svelte": "^0.1.6",
    "@hyrious/rimraf": "^0.1.0",
    "@netless/window-manager": "^0.4.32",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.49",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vitejs/plugin-react": "^1.3.2",
    "esbuild": "^0.14.45",
    "eslint": "^8.17.0",
    "eslint-define-config": "^1.5.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.2.11",
    "prettier": "^2.7.1",
    "sass": "^1.52.3",
    "semver": "^7.3.7",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "tsup": "^6.1.2",
    "type-fest": "^2.13.1",
    "typedoc": "^0.22.17",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "white-web-sdk": "^2.16.24"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
