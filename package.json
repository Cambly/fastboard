{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm check --filter={packages}...",
    "dev": "pnpm dev:react",
    "dev:react": "pnpm dev --filter=test-react",
    "build": "pnpm cleanup && pnpm build --filter={packages}...",
    "build:ci": "pnpm build --aggregate-output --filter={packages}...",
    "cleanup": "pnpm cleanup -r"
  },
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "@hyrious/rimraf": "^0.1.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-define-config": "^1.2.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "vite": "^2.8.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
