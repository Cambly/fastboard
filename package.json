{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm -r check",
    "dev": "pnpm -F=fastboard dev",
    "dev:react": "pnpm -F=fastboard-react dev",
    "dev:ui": "pnpm -F=fastboard-ui dev",
    "build": "pnpm -r build",
    "build:ci": "pnpm --aggregate-output -r build",
    "cleanup": "pnpm -r cleanup",
    "release": "esbuild-dev scripts/release.ts"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.8.0",
    "@hyrious/esbuild-plugin-svelte": "^0.1.6",
    "@hyrious/rimraf": "^0.1.0",
    "@netless/window-manager": "^0.4.35",
    "@sveltejs/vite-plugin-svelte": "1.0.1",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vitejs/plugin-react": "^2.0.0",
    "esbuild": "^0.14.49",
    "eslint": "^8.20.0",
    "eslint-define-config": "^1.5.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.2.11",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "semver": "^7.3.7",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "tsup": "^6.1.3",
    "type-fest": "^2.16.0",
    "typedoc": "^0.23.8",
    "typedoc-plugin-markdown": "^3.13.3",
    "typescript": "^4.7.4",
    "vite": "^3.0.2",
    "white-web-sdk": "^2.16.27"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
